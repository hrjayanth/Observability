<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Define common properties -->
    <property name="LOG_PATH" value="logs"/>
    <property name="LOG_FILE" value="${LOG_PATH}/message-processor-1.log"/>
    <property name="MAX_HISTORY" value="7"/> <!-- keep 7 days of logs -->
    <property name="MAX_FILE_SIZE" value="10MB"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} trace_id=%X{trace_id} span_id=%X{span_id} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- JSON Rolling File Appender (Loki-friendly) -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>${LOG_PATH}/application-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>

        <!-- JSON encoder for clean Loki parsing -->
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>

                <!-- Timestamp -->
                <timestamp>
                    <timeZone>UTC</timeZone>
                </timestamp>

                <!-- Log level -->
                <pattern>
                    <pattern>{"level": "%level"}</pattern>
                </pattern>

                <!-- Logger name -->
                <loggerName>
                    <fieldName>logger</fieldName>
                </loggerName>

                <!-- Thread name -->
                <threadName>
                    <fieldName>thread</fieldName>
                </threadName>

                <!-- Trace and Span IDs from OpenTelemetry -->
                <mdc>
                    <includeMdcKeyName>trace_id</includeMdcKeyName>
                    <includeMdcKeyName>span_id</includeMdcKeyName>
                </mdc>

                <!-- Service name -->
                <pattern>
                    <pattern>{"service_name": "my-application-1"}</pattern>
                </pattern>

                <!-- Actual log message -->
                <message />

            </providers>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ROLLING_FILE"/>
    </root>

</configuration>
